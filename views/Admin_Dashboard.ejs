<body>
    <!-- Adityas Start -->
    

    <section class="dashboard">
        <div class="top">
            <div class="menu-icon" onclick="toggleMenu()">
                <i class="uil uil-bars"></i>
            </div>
            <div class="dash">DashBoard</div>
            <div class="Left-name">Welcome, <%= email %>!</div>
            
        </div>
        <hr class="top-border">
        <section class="Profile-sec">
            <div class="Donatebox">
                <div class="NAME-block">
                    
                    <h4 class="User-Name">Full Name: <%= name %> </h4>
                  
                </div>
            </div>
        </section>
        <section class="NGO-sec" style="display: none;">
            <h2 style="text-align: center; margin-bottom: 2rem;">NGO requests</h2>
            <div>
                <ul class="donor-list">
                    <% NGOname.forEach(ngo => { %>
                    <li class="donor-item">
                        <div class="donor-details">
                            <p class="donor-name"><%= ngo.NGOName %></p>
                            <p class="donor-email"><%= ngo.NgoID %></p>
                            <p class="donor-email"><%= ngo.NgoLocation %></p>
                        </div>
                        <div class="donor-actions">
                            <button class="btn-accept">Accept</button>
                            <button class="btn-decline">Decline</button>
                        </div>
                    </li>
                    <% }); %>
                </ul>
            </div>
        </section>
        
        <section class="Doners-sec" style="display: none;">
            <h2 class="section-title">Donor Requests</h2>
            <ul class="donor-list">
                <% Donername.forEach(user => { %>
                    <li class="donor-item">
                        <div class="donor-details">
                            <p class="donor-name">Name : <%= user.fullName %></p>
                            <p class="donor-email"><%= user.email %></p>
                        </div>
                        <div class="donor-actions">
                            <button class="btn-accept">Accept</button>
                            <button class="btn-decline">Decline</button>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </section>
        
        
        <section class="Complains-sec" style="display: none; margin-top: 2rem;">
            <div style="display: flex; justify-content: space-evenly;">
                <h2><%= UserName %></h2>
                <p><%= complain %></p>
            </div>
        </section>
    </section>

    
    <nav class="sliding-menu">
        <div class="logo-name">
            <div class="logo-img">
                <img src="img/logo.png" alt="logo">
            </div>
            <span class="logo_name">Petari</span>
        </div>
        <div class="menu-items">
            <ul class="nav-links">
                <li><a href="#">
                    <i class="uil uil-user-circle"></i>
                    <span id="Profile" class="link-name">Profie</span>
                </a></li>
                <li><a href="#">
                        <i class="uil uil-user-circle"></i>
                        <span id="NGO" class="link-name">NGO</span>
                    </a></li>
                <li><a href="#">
                        <i class="uil uil-user-circle"></i>
                        <span id="Doners" class="link-name">Doners</span>
                    </a></li>
                    <li><a href="#">
                        <i class="uil uil-comment-medical"></i>
                        <span id="Complains" class="link-name">Complains</span>
                    </a></li>
                <!-- <li><a href="#">
                        <i class="uil uil-map-marker-question"></i>
                        <span  id="Track" class="link-name">Track</span>
                    </a></li> -->
                
            </ul>
            <ul class="logout-mode">
                <li>
                    <a href="/admin-logout">
                        <i class="uil uil-sign-out-alt"></i>
                        <span class="link-name">Logout</span>
                    </a>
                </li>

                <li class="mode">
                    <a href="#">
                        <i class="uil uil-wind-moon"></i>
                        <span class="link-name">Dark Mode</span>
                    </a>
                    <div class="mode-toggle">
                        <span class="switch"></span>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    
    <!-- Adityas end -->
    <script>
        function toggleMenu() {
            var menu = document.querySelector('.sliding-menu');
            menu.style.width = menu.style.width === '25%' ? '0' : '25%';
        }

        const body = document.querySelector("body");
        const modeToggle = body.querySelector(".mode-toggle");

        modeToggle.addEventListener("click", () => {
            body.classList.toggle("dark");
        });
        
        
        let Ngo = document.querySelector("#NGO");
        let Doners = document.querySelector("#Doners");
        let Profile = document.querySelector("#Profile");
        let complains = document.querySelector("#Complains");
        let NGO_sec = document.querySelector('.NGO-sec');
        let Profile_sec = document.querySelector('.Profile-sec');
        let Doners_sec = document.querySelector('.Doners-sec');
        let complain_sec = document.querySelector('.Complains-sec');

        Profile.addEventListener('click', (e) =>{

            e.preventDefault();
            console.log("clicked")
            Profile_sec.style.display = "flex";
            NGO_sec.style.display = "none";
            Doners_sec.style.display = "none";
            complain_sec.style.display = "none";
        })

        Ngo.addEventListener('click', (e) =>{
            e.preventDefault();
            console.log("clicked")
            Profile_sec.style.display = "none";
            NGO_sec.style.display = "block";
            Doners_sec.style.display = "none";
            complain_sec.style.display = "none";
        })
        Doners.addEventListener('click', (e) =>{
            e.preventDefault();
            console.log("clicked")
            Profile_sec.style.display = "none";
            NGO_sec.style.display = "none";
            Doners_sec.style.display = "block";
            complain_sec.style.display = "none";
        })

        complains.addEventListener('click', (e) =>{

            e.preventDefault();
            console.log("clicked")
            Profile_sec.style.display = "none";
            NGO_sec.style.display = "none";
            Doners_sec.style.display = "none";
            complain_sec.style.display = "block";

        })
    </script>
</body>

